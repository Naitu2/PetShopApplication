<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"
            integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
            crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <link href="~/styles/index.css" rel="stylesheet" />
    <link href="~/styles/home.css" rel="stylesheet" />
    <link href="~/styles/list.css" rel="stylesheet" />
    <link href="~/styles/animalInfoCard.css" rel="stylesheet" />
</head>
<body>
    <div class="mainLayout">
        <div class="leftPanel">
            <img class="logo" src="~/images/logo.png" />
            <div class="flex flex-column navbar">
                <a asp-action="Index" asp-controller="Home">Home</a>
                <a asp-action="Index" asp-controller="Catalog">Catalog</a>
                <a asp-action="Index" asp-controller="Admin">Admin page</a>
            </div>
            @RenderSection("section1", false)
        </div>
        <div class="content text-center">
            <header>Wild Pet Shop</header>
            @RenderBody()
        </div>
    </div>
</body>
</html>
